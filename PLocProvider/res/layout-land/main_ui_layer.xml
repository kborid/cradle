<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ca_home_001"
    tools:context=".Screen.MainUILayer" >

    <ImageView 
        android:layout_marginLeft="20dip"
        android:layout_marginTop="10dip"
        android:src="@drawable/ca_home_010"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/center"
        android:layout_width="1px"
        android:layout_height="1px"
        android:layout_centerInParent="true" />

    <com.pioneer.cradle.PLocProvider.components.CircleView
        android:id="@+id/setting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/center"
        android:layout_alignTop="@id/center"
        android:layout_marginRight="50dp"
        android:layout_marginTop="-84dp"
        android:src="@drawable/main_setting" />

    <com.pioneer.cradle.PLocProvider.components.CircleView
        android:id="@+id/navi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/center"
        android:layout_alignLeft="@id/center"
        android:layout_marginBottom="-30dp"
        android:layout_marginLeft="-84dp"
        android:src="@drawable/main_navi" />

    <com.pioneer.cradle.PLocProvider.components.CircleView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/center"
        android:layout_alignTop="@id/center"
        android:layout_marginLeft="-112dp"
        android:layout_marginTop="-6dp"
        android:src="@drawable/main_phone" />

    <com.pioneer.cradle.PLocProvider.components.CircleView
        android:id="@+id/music"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/center"
        android:layout_alignTop="@id/center"
        android:layout_marginLeft="36dp"
        android:layout_marginTop="-33dp"
        android:src="@drawable/main_music" />

</RelativeLayout>